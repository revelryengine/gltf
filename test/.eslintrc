{
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
    "assert": true,
    "sinon": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-unused-expressions": ["off"],
    "no-unused-vars": ["error", { "args": "none" }],
    "class-methods-use-this": ["off"]
  }
}
